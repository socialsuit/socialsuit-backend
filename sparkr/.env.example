# Sparkr Environment Variables

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/sparkr"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Authentication
JWT_SECRET="your_jwt_secret_key"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX="/api/v1"
BACKEND_CORS_ORIGINS="[\"http://localhost\", \"http://localhost:8080\", \"http://localhost:3000\"]"

# Logging
LOG_LEVEL="INFO"

